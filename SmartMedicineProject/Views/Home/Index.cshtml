
@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/recordPanelStyle.css" />
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="record_panel" id="">
    <div class="record_panel_cont">
        <div class="record_panel_body">
            <p>Запись</p>
            <form id="formRecord" >
                <input type="text" id="FullName" placeholder="ФИО" required>
                <input type="text" id="PhoneNumber" placeholder="Телефон" required>
                <input type="text" id="Email" placeholder="Ел.Почта" required>
                <input type="text" id="Address" placeholder="Адрес" required>
                <button type="submit" class="btn btn-outline-dark">Записаться</button>
            </form>         
            <p id="error" style="color:forestgreen;"></p>
        </div>
    </div>
</div>
<script src="http://code.jquery.com/jquery-1.9.1.js"></script>
<script src="~/js/record.js"></script>   


