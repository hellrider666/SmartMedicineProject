@model SmartMedicineProject.ViewModels.RecrordingListViewModel;

<link rel="stylesheet" href="~/css/popUpPacientsInfo.css" />
<div id="List">
    <table id="tableList" class="table">
        @if (Model.recordModels.Count() > 0)
        {
            @foreach (var item in Model.recordModels)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RecordDate)
                    </td>
                    <td>
                        <a href="#" title="Взять в работу" onclick="JoinPacient(@item.ID)">&#9989</a>
                        <a asp-action="" title="Удалить" asp-route-id="">&#10060</a>
                    </td>
                </tr>
            }
        }
    </table>


