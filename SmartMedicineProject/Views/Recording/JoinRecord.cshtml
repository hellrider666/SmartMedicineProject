@model SmartMedicineProject.ViewModels.RecrordingListViewModel;
@{
    Layout = "_Layout";
}
<h1>Index</h1>

<form method="get">
    <table class="table">
        <div class="form-inline form-group">
            <label class="control-label">Номер телефона: </label>
            <input name="_PhoneNumber" class="form-control">
            <input type="date" name="date" class="form-control">
            <input type="submit" value="Найти" class="btn btn-default" />
        </div>
</form>
    <div>
        <label class="control-label">Результаты поиска по: </label>
        @if (Model.RecordDate != DateTime.MinValue.ToShortDateString())

        {
           <label>Дате</label> @Html.DisplayFor(Model => Model.RecordDate);

        }
        @if (Model.PhoneNumber != null) {
           <label>Тел.</label> @Html.DisplayFor(Model => Model.PhoneNumber);
        }
    </div>
<thead>
    <tr>
        <th>
            @Html.DisplayName("ФИО")
        </th>
        <th>
            @Html.DisplayName("Ел. Почта")
        </th>
        <th>
            @Html.DisplayName("Адрес")
        </th>
        <th>
            @Html.DisplayName("Номер")
        </th>
        <th>
            @Html.DisplayName("Дата Записи")
        </th>

    </tr>
</thead>
<tbody>
    @foreach (var item in Model.recordModels)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecordDate)
            </td>
            <td>
                <a asp-action="JoinPacient" title="Взять в работу" asp-route-id="@item.ID">&#9989</a>
                <a asp-action="Delete" title="Удалить" asp-route-id="">&#10060</a>
            </td>
        </tr>
    }
</tbody>
</table>
